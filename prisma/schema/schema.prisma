generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator tsPrisma {
    provider = "ts-prisma-generator"
}

enum Platforms {
    Microsoft
    Discord
    Google
    GitHub
}

enum Device {
    Desktop
    Mobile
    Tablet
    Other
}

enum BoardType {
    Excalidraw
    Tldraw
}

enum BoardRole {
    BoardViewer
    BoardCollaborator
}

enum CategoryRole {
    CategoryViewer
    CategoryCollaborator
    CategoryManager
    CategoryAdmin
}

enum GroupRole {
    GroupViewer
    GroupCollaborator
    GroupManager
    GroupAdmin
}

model AllEnumsModel {
    dbId String @id @default(uuid())

    platformEnum  Platforms
    deviceEnum    Device
    boardTypeEnum BoardType

    boardRoleEnum    BoardRole
    categoryRoleEnum CategoryRole
    groupRoleEnum    GroupRole
}
